@using LojaProdutos.Models
@model List<UsuarioModel>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container mt-5">
    
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2>Listagem de Usuários</h2>
        <a asp-action="Cadastrar" asp-controller="Usuario" class="btn btn-success">Cadastar novo usuário</a>
    </div>

    <table class="table table-hover table-bordered" id="registros">
        <thead class="table-dark">
            <tr>
                <th>Cargo</th>
                <th>Nome</th>
                <th>Estado</th>
                <th>E-mail</th>
                <th>Data da Criação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @if(Model.Count > 0)
                {
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Cargo</td>
                            <td>@usuario.Name</td>
                            <td>@usuario.Endereco.Estado</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Editar" asp-controller="Usuario" asp-route-id="@usuario.Id" class="btn btn-info"><i class="bi bi-plus-circle mx-1"></i>Editar</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

</div>